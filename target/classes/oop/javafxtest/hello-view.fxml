<?import javafx.scene.text.Font?>

<VBox onKeyPressed="#keyPressed" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.javafxtest.HelloController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#showHelp" text="About MyHelloApp" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" onAction="#restartGame" text="Restart">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showHelp" text="About MyHelloApp" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="File" visible="false">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit" visible="false">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane focusTraversable="true" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: #66b3ff;" VBox.vgrow="ALWAYS">
      <children>
            <Label fx:id="generalInfoLabel" alignment="CENTER" layoutX="519.0" layoutY="86.0" prefHeight="82.0" prefWidth="114.0" text="General info" />
            <GridPane layoutX="453.0" layoutY="260.0" prefHeight="105.0" prefWidth="173.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="leftButton" mnemonicParsing="false" onAction="#goLeft" scaleX="2.0" scaleY="2.0" text="←" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                  <Button fx:id="upButton" mnemonicParsing="false" onAction="#goUp" scaleX="2.0" scaleY="2.0" text="↑" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                  <Button fx:id="rightButton" mnemonicParsing="false" onAction="#goRight" scaleX="2.0" scaleY="2.0" text="→" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                  <Button fx:id="downButton" mnemonicParsing="false" onAction="#goDown" scaleX="2.0" scaleY="2.0" text="↓" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
               </children>
            </GridPane>
            <Button fx:id="fishButton" layoutX="24.0" layoutY="256.0" mnemonicParsing="false" onAction="#fish" prefHeight="67.0" prefWidth="114.0" style="-fx-background-color: #5c72ff; -fx-border-color: #000000; -fx-border-radius: 10; -fx-background-radius: 11;" text="Fish">
               <font>
                  <Font name="System Bold" size="33.0" />
               </font>
            </Button>
            <Button fx:id="sellAllFishButton" layoutX="145.0" layoutY="302.0" mnemonicParsing="false" onAction="#sellAllFish" style="-fx-background-color: #faf207; -fx-border-color: #000000;" text="Sell all fish" />
            <VBox layoutX="492.0" layoutY="14.0" prefHeight="121.0" prefWidth="134.0">
               <children>
                  <Label onMouseClicked="#showFishCaught" text="Amount of fish caught:" />
                  <GridPane fx:id="fishCaughtInfoBox" prefHeight="105.0" prefWidth="121.0" visible="false">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="113.0" minWidth="10.0" prefWidth="51.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="152.0" minWidth="10.0" prefWidth="49.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label prefHeight="17.0" prefWidth="50.0" text="Makrel:" />
                        <Label text="Sild" GridPane.rowIndex="1" />
                        <Label text="Laks" GridPane.rowIndex="2" />
                        <Label text="Ål" GridPane.rowIndex="3" />
                        <Label fx:id="makrelCount" text="Label" GridPane.columnIndex="1" />
                        <Label fx:id="sildCount" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="laksCount" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="ålCount" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
            <FlowPane layoutX="145.0" layoutY="337.0" prefHeight="17.0" prefWidth="159.0">
               <children>
                  <Label text="You have " />
                  <Label fx:id="currentGoldLabel" text="0" />
                  <Label text=" gold" />
               </children>
            </FlowPane>
            <StackPane layoutX="24.0" layoutY="337.0" onMouseClicked="#hoursToFishChanging" prefHeight="25.0" prefWidth="107.0">
               <children>
                  <FlowPane fx:id="fishingHoursDisplayPane" prefHeight="112.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="currentHoursToFishLabel" text="x" />
                        <Label text=" hours" />
                     </children>
                  </FlowPane>
                  <Slider fx:id="fishingHoursSlider" blockIncrement="1.0" max="12.0" min="1.0" onMouseReleased="#sliderDone" prefHeight="14.0" prefWidth="107.0" showTickLabels="true" showTickMarks="true" value="4.0" visible="false" />
               </children>
            </StackPane>
            <GridPane fx:id="baseGridPane" gridLinesVisible="true" layoutX="14.0" layoutY="10.0" prefHeight="239.0" prefWidth="434.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
            <FlowPane layoutX="304.0" layoutY="337.0" prefHeight="17.0" prefWidth="148.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="79.0" text="Daily Expense:" />
                  <Label fx:id="dailyExpensesLabel" prefHeight="17.0" prefWidth="60.0" text="0" />
               </children>
            </FlowPane>
            <Label fx:id="checkWinConditionLabel" layoutX="272.0" layoutY="256.0" prefHeight="37.0" prefWidth="173.0" text="YOU WIN!" textAlignment="CENTER" visible="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <effect>
                  <ColorAdjust brightness="-1.0" contrast="-1.0" hue="-1.0" saturation="1.0" />
               </effect>
            </Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
